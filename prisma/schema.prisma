generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_DEV_URL")
}

enum TransactionType {
  subscription
  charge
}

enum TxStatus {
  created
  processing
  hold
  success
  failure
  reversed
  expired
}

model Merchant {
  id            String         @id @default(uuid())
  shop          String         @unique
  accessToken   String
  monobankToken String
  subscriptions Subscription[]
}

model Subscription {
  id              String   @id @default(uuid())
  invoiceId       String   @unique
  orderId         String
  total           Decimal  @db.Decimal(18, 2)
  currency        Int
  currentStatus   TxStatus
  currentModified DateTime // modifiedDate, який зараз вважаємо “істинним”
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  cardToken       String?
  merchantId      String
  cancelled       Boolean  @default(false)

  merchant  Merchant             @relation(fields: [merchantId], references: [id], onDelete: Cascade)
  statuses  SubscriptionStatus[]
  cronTasks CronTask[]
  charges   Charge[]
}

model Charge {
  id              String       @id @default(uuid())
  invoiceId       String       @unique
  total           Decimal      @db.Decimal(18, 2)
  currency        Int
  currentStatus   TxStatus
  currentModified DateTime // modifiedDate, який зараз вважаємо “істинним”
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  subscriptionId  String
  subscription    Subscription @relation(fields: [subscriptionId], references: [id], onDelete: Cascade)

  statuses ChargeStatus[]
}

model SubscriptionStatus {
  id            String       @id @default(uuid())
  transaction   Subscription @relation(fields: [transactionId], references: [id], onDelete: Cascade)
  transactionId String
  status        TxStatus
  modifiedDate  DateTime
  receivedAt    DateTime     @default(now()) // коли отримали вебхук
  payload       Json?

  @@unique([transactionId, status, modifiedDate])
  @@index([modifiedDate])
}

model ChargeStatus {
  id            String   @id @default(uuid())
  transaction   Charge   @relation(fields: [transactionId], references: [id], onDelete: Cascade)
  transactionId String
  status        TxStatus
  modifiedDate  DateTime
  receivedAt    DateTime @default(now()) // коли отримали вебхук
  payload       Json?

  @@unique([transactionId, status, modifiedDate])
  @@index([modifiedDate])
}

model CronTask {
  id             String   @id @default(uuid())
  cronExpression String
  nextRunDate    DateTime
  transactionId  String   @unique
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  transaction Subscription @relation(fields: [transactionId], references: [id], onDelete: Cascade)
}
